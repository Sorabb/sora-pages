{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": "./src", 
    "incremental": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}
